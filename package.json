{
  "name": "pulumi-vscode-copilot",
  "publisher": "pulumi",
  "displayName": "pulumi-vscode-copilot",
  "description": "Pulumi Copilot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "pulumi-vscode-copilot.pulumipus",
        "fullName": "Pulumi Copilot",
        "name": "pulumi",
        "description": "Example: a static website on AWS behind a CDN.",
        "isSticky": true,
        "commands": [
        ]
      }
    ],
    "commands": [
      {
        "command": "pulumi-vscode-copilot.createProject",
        "title": "Pulumi Copilot: Create Project"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.18.0",
    "glob": "^11.0.1",
    "mocha": "^11.0.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/tmp": "^0.2.6",
    "@types/unzipper": "^0.10.10",
    "@yarnpkg/fslib": "^3.1.1",
    "@yarnpkg/libzip": "^3.1.0",
    "ai": "3.0.18",
    "javascript-petname": "^1.2.0",
    "tmp": "^0.2.3",
    "unzipper": "^0.12.3",
    "winston": "^3.17.0",
    "winston-transport-vscode": "^0.1.0"
  }
}
